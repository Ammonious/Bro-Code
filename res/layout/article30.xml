<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" android:background="@drawable/background" android:clickable="true" xmlns:android="http://schemas.android.com/apk/res/android">
<android.support.v4.view.ViewPager
    android:id="@+id/viewPager"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
</android.support.v4.view.ViewPager>
    
    <TextView
        android:id="@+id/textView01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:padding="12dp"
        android:text="@string/article30"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView02"
        android:layout_width="match_parent"
        android:layout_height="302dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/body30"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000" />

 
</LinearLayout>


    


